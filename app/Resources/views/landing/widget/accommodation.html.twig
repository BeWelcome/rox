<div class="btn-group mx-1">
    <button id="accommodation" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {%  if member.Accomodation == 'anytime' %}{{ 'hosting' | trans }}{% endif %}
        {%  if member.Accomodation == 'dependonrequest' %}{{ 'maybe hosting' | trans }}{% endif %}
        {%  if member.Accomodation == 'neverask' %}{{ 'not hosting' | trans }}{% endif %}
    </button>
    <div class="dropdown-menu hoststatusdropdown">
        <a id="anytime" class="hosting dropdown-item" href="#">{{ 'hosting' | trans }}</a>
        <a id="dependonrequest" class="hosting dropdown-item" href="#">{{ 'maybe hosting' | trans }}</a>
        <a id="neverask" class="hosting dropdown-item" href="#">{{ 'not hosting' | trans }}</a>
    </div>
</div>
