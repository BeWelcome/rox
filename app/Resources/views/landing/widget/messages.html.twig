{% import 'macros.twig' as macros %}
<div id="messagesdisplay" class="scrollcontent">
    {% for message in messages %}
    <div class="row pl-1 pr-1">
        <div class="col-xs-12 fullheight">
            <div class="hidden-xs-down float-left avatarpadding">
                {{ macros.avatar( message.sender.username, 50, true) }}
            </div>
            <div class="dashentry">
                <p class="text-truncate">
                    {% set unread = (message.whenfirstread == '0000-00-00 00:00.00') %}
                    {% if (unread) %}<strong>{% endif %}
                        <a href="messages/{{ message.id }}">{{ message.message|raw }}</a>
                        {% if unread %}</strong>{% endif %}<br>
                    <small>from {{ macros.profilelink(message.sender.username) }} {# {{ message.created.DiffForHumans) }}#}</small>
                </p>
            </div>
            <div class="float-right hidden-md-down chevplace">
                <a href="messages/{{ message.id }}"><i class="fa fa-chevron-right"></i></a>
            </div>
        </div>
    </div>
{% else %}
    <em>{{ 'No messages' | trans }}</em>
{% endfor %}
</div>
