{% import 'macros.twig' as macros %}
<div id="notificationsdisplay" class="scrollcontent">
    {% for notification in notifications %}
        <div class="d-flex flex-row justify-content-start align-items-center p-2">
            <div class="pr-2">{{ macros.avatar( notification.member.Username, 50, true ) }}</div>
            <div class="text-truncate">
                <p class="text-truncate m-0">
                    <a href="{{ notification.link }}" title="{{ notification.wordcode|trans }}">{{ notification.wordcode|trans| raw }}</a><br>
                    <small><abbr title="{{ notification.created }}">{{ notification.created.DiffForHumans }}</abbr></small>
                </p>
            </div>
            <div class="ml-auto"><a class="notify" id="notify-{{ notification.id }}" href="#"><i class="fa fa-remove"></i></a></div>
        </div>
    {% else %}
        <em>{{ 'No notifications' | trans }}</em>
    {% endfor %}

</div>
