<div class="card mb-3">
    <a name="accommodation"></a>

    <h3 class="card-header">
        <i class="fa fa-home"></i><span class="icontext">Accommodation</span>
        <a href="#" class="btn btn-primary-outline btn-sm float-right request p-0"><i class="fa fa-angle-double-right"></i> Send a request</a>
    </h3>

    <div class="card-block">

        <p class="card-text m-b-0"><strong>Max. number of guests:</strong> {{ member.maxguest }}</p>
        <p class="card-text m-b-0"><strong>Max. length of stay:</strong> {{ member.maxlenghtofstay }}</p>





        <div id="accordion" role="tablist" aria-multiselectable="true">

            {% if member.ilivewith %}
                <div class="panel panel-default">
                    <div class="panel-heading mb-0" role="tab" id="headingZero">
                        <p class="panel-title mb-0">
                            <button class="btn btn-secondary btn-block" type="button" data-toggle="collapse" data-target="#collapseZero" aria-expanded="false" aria-controls="collapseZero">I live with</button>
                        </p>
                    </div>
                    <div id="collapseZero" class="panel-collapse collapse mb-1" role="tabpanel" aria-labelledby="headingZero">
                        {{ member.ilivewith }}
                    </div>
                    <noscript>{{ member.ilivewith }}</noscript>
                </div>
            {% endif %}

            {% if member.pleasebring %}
                <div class="panel panel-default">
                    <div class="panel-heading mb-0" role="tab" id="headingOne">
                        <p class="panel-title mb-0">
                            <button class="btn btn-secondary btn-block" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">Please bring</button>
                        </p>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse mb-1" role="tabpanel" aria-labelledby="headingOne">
                        {{ member.pleasebring }}
                    </div>
                    <noscript>{{ member.pleasebring }}</noscript>
                </div>
            {%  endif %}

            {% if member.otherrestrictions %}
                <div class="panel panel-default">
                    <div class="panel-heading mb-0" role="tab" id="headingTwo">
                        <p class="panel-title mb-0">
                            <button class="btn btn-secondary btn-block" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">House rules</button>
                        </p>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse mb-1" role="tabpanel" aria-labelledby="headingTwo">
                        {{ member.otherrestrictions }}
                    </div>
                    <noscript>{{ member.otherrestrictions }}</noscript>
                </div>
            {% endif %}

            {% if member.offerguests %}
                <div class="panel panel-default">
                    <div class="panel-heading mb-0" role="tab" id="headingThree">
                        <p class="panel-title mb-0">
                            <button class="btn btn-secondary btn-block" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">I can offer my guests</button>
                        </p>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse mb-1" role="tabpanel" aria-labelledby="headingThree">
                        {{ member.offerguests }}
                    </div>
                    <noscript>{{ member.offerguests }}</noscript>
                </div>
            {% endif %}

            {% if member.additionalaccomodationinfo %}
                <div class="panel panel-default">
                    <div class="panel-heading mb-0" role="tab" id="headingFour">
                        <p class="panel-title mb-0">
                            <button class="btn btn-secondary btn-block" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">About my accommodation</button>
                        </p>
                    </div>
                    <div id="collapseFour" class="panel-collapse collapse mb-1" role="tabpanel" aria-labelledby="headingFour">
                        {{ member.additionalaccomodationinfo }}
                    </div>
                    <noscript>{{ member.additionalaccomodationinfo }}</noscript>
                </div>
            {% endif %}

            {% if member.publictransport %}
                <div class="panel panel-default">
                    <div class="panel-heading mb-0" role="tab" id="headingFive">
                        <p class="panel-title mb-0">
                            <button class="btn btn-secondary btn-block" type="button" data-toggle="collapse" data-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">How to get there</button>
                        </p>
                    </div>
                    <div id="collapseFive" class="panel-collapse collapse mb-1" role="tabpanel" aria-labelledby="headingFive">
                        {{ member.publictransport }}
                    </div>
                    <noscript>{{ member.publictransport }}</noscript>
                </div>
            {% endif %}
        </div>

    </div>
</div>
