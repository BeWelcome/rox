{% extends 'base.html.twig' %}

{% block title %}
    {{ 'All trips' | trans }}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-xs-12">
            <div class="pull-right">{{ pagerfanta( trips, 'twitter_bootstrap4_translated', { routeName: 'activity' }) }}</div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
        {% for trip in trips %}
            <h1><a href="{{ path('trip_show_details', { id: trip.id } ) }}">{{ trip.summary }}</a></h1>
            <p class="small">{{ trip.createdBy.Username }}{% if trip.createdBy == my_member %}<a href="{{  path('trip_update', { id: trip.id} ) }}">Update</a>{% endif %}</p>
            <p>{{ trip.description | truncate(200) }}</p>
        {% else %}
            <div class="well">{{ 'trip.no_trips_found'|trans }}</div>
        {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="pull-right">{{ pagerfanta( trips, 'twitter_bootstrap4_translated', { routeName: 'activity' }) }}</div>
        </div>
    </div>

{% endblock content %}
