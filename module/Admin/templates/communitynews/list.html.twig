{% extends '@base/base.html.twig' %}

{% block title %}
    {{ 'Admin - Community News' | trans }}
{% endblock %}

{% block content %}
    <div class="container">
        <table class="table table-striped table-bordered">
            <thead class="thead-default">
            <tr>
                <th>{{ 'Title' | trans }}</th>
                <th colspan="2"><a class="btn btn-primary float-right" href="{{ path('admin_communitynews_create') }}">{{ 'Create' | trans }}</a></th>
            </tr>
            </thead>
            {% for news in communityNews %}
                <tr>
                    <td>
                        {{ news.title }}
                    </td>
                    <td style="width: 10%"><a class="btn btn-primary" href="{{ path('admin_communitynews_edit', { id: news.id }) }}"><i class="fa fa-pencil-alt" title="{{ 'button.edit' | trans }}"></i></a></td>
                    <td style="width: 10%">
                    {%- if news.public == true -%}
                        <a class="btn btn-primary" href="{{ path('admin_communitynews_hide', { id: news.id }) }}"><i class="fa fa-ban" title="{{ 'Hide' | trans }}"></i></a>
                    {%- else -%}
                        <a class="btn btn-outline-secondary" href="{{ path('admin_communitynews_unhide', { id: news.id }) }}"><i class="fa fa-ban" title="{{ 'Show' | trans }}"></i></a>
                    {%- endif -%}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock content %}
