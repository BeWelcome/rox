{% extends '@base/base.html.twig' %}

{% block content %}

    <h2>{{ 'AboutUsPage' | trans }}</h2>

    <ul class="nav nav-pills mb-2 mt-1">
        <li class="nav-item">
            <a class="nav-link{% if page == 'index' %} active{% endif %}" href="{{ path('about') }}">{{ 'AboutUsSubmenu' | trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link{% if page == 'faq' %} active{% endif %}" href="{{ path('about', { page: 'faq' }) }}">{{ 'Faq' | trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link{% if page == 'feedback' %} active{% endif %}" href="{{ path('about', { page: 'feedback' }) }}">{{ 'ContactUs' | trans }}</a>
        </li>
    </ul>

    <div class="row">
        <div class="col-12 col-sm-8 col-md-9 ">
            {% include pageTemplate %}
        </div>

        <div class="clearfix hidden-sm-up"></div>

        <div class="col-12 col-sm-4 col-md-3">

            <h4>{{ 'About_AtAGlance' | trans }}</h4>

            <ul class="nav nav-pills nav-stacked">
                <li class="nav-item"><a class="nav-link{% if page == 'index' %} active{% endif %}" href="{{ path('about') }}">{{ 'About_TheIdea' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link{% if page == 'thepeople' %} active{% endif %}" href="{{ path('about', { page: 'thepeople' }) }}">{{ 'About_ThePeople' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link{% if page == 'getactive' %} active{% endif %}" href="{{ path('about', { page: 'getactive' }) }}">{{ 'About_GetActive' | trans }}</a></li>
            </ul>

            <h4 class="m-t-2">{{ 'MoreInfo' | trans }}</h4>

            <ul class="nav nav-pills nav-stacked">
                <li class="nav-item"><a class="nav-link" href="wiki/press%20information">{{ 'PressInfoPage' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link" href="http://www.bevolunteer.org/about-bevolunteer/board-of-directors/" target="_blank">{{ 'BoardOfDirectorsPage' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link" href="http://www.bevolunteer.org/" target="_blank">{{ 'BeVolunteerBlogs' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link" href="terms">{{ 'TermsPage' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link" href="privacy">{{ 'PrivacyPage' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('about', { page: 'commentguidelines' }) }}">{{ 'CommentGuidelinesPage' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link" href="stats">{{ 'StatsPage' | trans }}</a></li>
            </ul>

        </div>
    </div>

{% endblock %}
