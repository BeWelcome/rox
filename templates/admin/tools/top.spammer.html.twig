{% extends 'base.html.twig' %}
{% import 'macros.twig' as macros %}

{% block title %}
    {{ 'admin.tools.title' | trans }}
{% endblock %}

{% block content %}
    <h1>{{ 'admin.tools.headline' | trans }}</h1>
    <h2>{{ 'admin.tools.check_spam_messages' | trans }}</h2>

    {% if messagesSent|length %}
        <div class="table-responsive">
            <table class="table table-striped tabel-hover">
                <tr>
                    <th colspan="2">Member</th>
                    <th>Status</th>
                    <th>Updated</th>
                    <th># messages</th>
                </tr>
                {% for result in messagesSent %}
                    <tr>
                        <td>{{ macros.avatar(result.Username) }}</td>
                        <td>{{ macros.profilelink(result.Username) }}</td>
                        <td>{{ result.Status }}</td>
                        <td>{{ result.Updated }}</td>
                        <td>{{ result.MessagesSent }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    {% else %}
        {{ 'admin.tools.nothing' | trans }}
    {% endif %}
{% endblock content %}