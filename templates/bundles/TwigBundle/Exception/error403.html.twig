{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block content %}
    <h1>{{ 'error.page.access.denied'|trans }}</h1>

    {% if app.user %}
        <p>{{ 'error.greeting'|trans(app.user.Username) }}<p>
        <p>{{ 'error.403'|trans }}</p>
    {% else %}
        <p>{{ 'error.403'|trans }}</p>
    {% endif %}
    <p>
        <br><a href="{{ url('homepage') }}">{{ 'error.return.home'|trans }}</a>
    </p>
{% endblock %}
