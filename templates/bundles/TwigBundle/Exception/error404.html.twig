{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block content %}
    <h1>{{ 'error.page.not.found'|trans }}</h1>

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <p>Hi {{ app.user.Username }}!<p>
        <p>{{ 'error.404'|trans({'url': app.request.pathInfo }) }}</p>
    {% else %}
        <p>{{ 'error.404'|trans({'url': app.request.pathInfo }) }}</p>
    {% endif %}
    <p>
        <br><a href="{{ url('homepage') }}">{{ 'error.return.home'|trans }}</a>
    </p>
{% endblock %}
