{% block ckeditor_widget %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>

    {% if not async %}
        {{ block( '_ckeditor_javascript' ) }}
        {{ block( '_ckeditor_stylesheet' ) }}
    {% endif %}
{% endblock %}

{% block _ckeditor_javascript %}
    <script src="{{ asset('script/ckeditor.js') }}"></script>
{% endblock %}

{% block _ckeditor_stylesheet %}
    <style>
        .ck-editor__editable {
            min-height: 10em;
        }
    </style>
{% endblock %}

