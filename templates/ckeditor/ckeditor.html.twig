{% block ckeditor_widget %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    {% if not async %}
        {{ block( '_ckeditor_javascript' ) }}
        {{ block( '_ckeditor_stylesheet' ) }}
    {% endif %}
{% endblock %}

{% block _ckeditor_javascript %}
    <script src="{{ asset('build/roxeditor.js') }}"></script>
    <script src="{{ asset('build/cktranslations/' ~ locale ~ '.js') }}"></script>
{% endblock %}

{% block _ckeditor_stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/roxeditor.css') }}">
    <style>
        .ck-editor__editable {
            min-height: 10em;
        }
    </style>
{% endblock %}

