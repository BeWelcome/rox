{% extends 'base.html.twig' %}
{% import 'macros.twig' as macros %}

{% block stylesheets %}
    {{ encore_entry_link_tags('tailwind') }}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block content %}
    {%  set member = app.user %}
    <h2>{% trans with {'%username%': otherMember.Username} %}messages.with.heading{% endtrans %}</h2>

    {% if items.nbResults == 0 %}
        <p>{{ 'messages.none' | trans }}</p>
    {% else %}
        {% if items.haveToPaginate %}
        <div class="u-mb-8">
            {{ pagerfanta( items, 'rounded_pagination') }}
        </div>
        {% endif %}
        {% for message in items.currentPageResults %}
            {% include 'conversations/message.html.twig' with { 'message': message, 'between': true } %}
        {% endfor %}
        {% if items.haveToPaginate %}
            <div class="u-mt-8">
                {{ pagerfanta( items, 'rounded_pagination') }}
            </div>
        {% endif %}

    {% endif %}
{% endblock %}
