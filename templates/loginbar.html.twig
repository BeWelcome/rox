{% import 'macros.twig' as macros %}
<!-- #nav: main navigation -->

<nav id="main_menu" class="navbar sticky-top navbar-dark navbar-expand bg-primary justify-content-between">
    <div class="container-lg">
        <ul id="collapsing_menu" class="navbar navbar-nav">
            <li class="nav-item">
                <a id="brand_image" class="navbar-brand" href="{{ url('homepage') }}">
                    <img class="d-none d-md-block" src="{{ asset('images/logo_index_top.png') }}" alt="BeWelcome"/>
                    <img class="pl-1 d-block d-md-none" src="{{ asset('images/logo_no_text.png') }}" alt="BeWelcome"/>
                </a>
            </li>
        </ul>
    <ul id="static_menu" class="navbar navbar-nav">
        <li class="nav-item dropdown mr-2">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="{{ 'menu.login.toggle'|trans }}">{{ 'login'|trans }}</a>
            <ul id="login_dropdown" class="dropdown-menu dropdown-menu-right" style="min-width:200px">
                <li class="p-2">
                    <form class="form-inline" method="post" action="{{ url('security_check') }}">
                        <div class="form-label-group mb-2">
                            <input class="form-control" type="text" id="_username_2" name="_username" placeholder="{{ 'username'|trans }}" autofocus="">
                            <label for="_username_2">{{ 'username'|trans }}</label>
                        </div>
                        <div class="form-label-group mb-2">
                            <input class="form-control" type="password" id="_password_2" name="_password" placeholder="Passwort">
                            <label for="_password_2">{{ 'password'|trans }}</label>
                        </div>
                        <div class="form-check mb-2 text-white">
                            <input type="checkbox" class="form-check-input mr-2" id="login-r" value="1" name="_remember_me"><label for="login-r" class="form-check-label">
                                {{ 'stayloggedin' | trans }}
                            </label>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="ml-auto o-button" id="loginDropdownButton">{{ 'indexpageloginsubmit' | trans }}</button>
                        <span class="navbar-text">{{ 'menu.not.a.member.yet'|trans }}</span>
                        <a class="ml-auto o-button" href="{{ url('signup') }}">{{ 'navbar.button.signup'|trans }}</a>
                    </form>
                </li>
            </ul>
        </li>
        <li class="nav-item dropdown">
            <button class="btn btn-primary border text-nowrap dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="{{ 'menu.language.toggle'|trans }}">{{ language_name(app.request.locale) }}</button>
            <ul id="language_dropdown" class="dropdown-menu dropdown-menu-right" style="max-height:100vh; overflow-y: auto; column-count: 2">
                {% for lang in locales %}
                    <li><a class="dropdown-item {% if lang == app.request.locale %}bg-primary{% endif %} m-1" href="{{ path('language', { locale: lang }) }}">
                            {{ language_name(lang) }}
                        </a></li>
                {% endfor %}
            </ul>
        </li>
    </ul>
    </div>
</nav>
