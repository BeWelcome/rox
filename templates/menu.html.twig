                        <a href="{{ url('about') }}" class="nav-link px-3 menuborder">{{ 'About' | trans }}</a>
                    </li>
                    <li class="menuborder">
                        <a href="{{ url('safety') }}" class="nav-link px-3">{{ 'Safety' | trans }}</a>
                    </li>
