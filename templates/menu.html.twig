                    <li class="nav-item float-right d-block d-lg-none">
                        <a href="{{ path( 'members_profile' , { username: member.Username } ) }}" class="nav-link"><i class="fa fa-lg fa-user"></i></a>
                    </li>

                    {# member dropdown on bigger screens #}
                    <li class="nav-item dropdown float-right d-none d-lg-block">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i> {{ member.Username }}</a>
