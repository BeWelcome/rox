{% import 'macros.twig' as macros %}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('tailwind')  }}
    {{ encore_entry_link_tags('requests')  }}
{% endblock stylesheets %}

{% block content %}
    {{ macros.messageheader(thread) }}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
    <div class="row mb-2">
        <div class="col-12">
            {{ form_row(form.message) }}
            {% do form.subject.setRendered %}
            {{ form_rest(form) }}
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-12 u-flex u-justify-end">
            <button type="submit" class="btn btn-primary">{{ 'label.message.button.send' | trans }}</button>
        </div>
    </div>

    {{ form_end(form) }}

    {% include 'message/thread.html.twig' %}

{% endblock content %}
