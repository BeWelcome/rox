{% import 'macros.twig' as macros %}
<div class="col-12 col-sm-6 card {% if not mute %}comment-bg-{{ comment.quality|lower }}{% else %}text-muted{% endif %}">
    <div class="d-flex flex-row justify-content-between">
        <div><p class="h4 good">{{ ('commentquality_' ~ comment.quality)|lower|trans }}</p></div>
        <div><span title="2013-01-22 00:00:00" class="small">{{ comment.created | format_date('medium' )}}</span></div>
    </div>

    <div class="d-flex flex-row justify-content-between">
        <div>
            <p class="h4 m-0">{{ 'member.comment.from' | trans }}</p>
            <img class="profileimg" width="50" height="50" src="images/empty_avatar.png" title="{{ comment.FromMember.Username }}" alt="{{ comment.FromMember.Username }}"><br>
            <small>{{ comment.FromMember.Username }}</small>
        </div>
        <div class="my-1">
            <p class="text-mute small p-3 font-italic">
                {{ comment.TextWhere | purify | nl2br }}</p>
        </div>
        <div class="text-right">
            <p class="h4 m-0">{{ 'member.comment.on' | trans}}</p>
            <img class="profileimg" width="50" height="50" src="images/empty_avatar.png" title="{{ comment.ToMember.Username }}" alt="{{ comment.ToMember.Username }}"><br>
            <small>{{ comment.ToMember.Username }}</small>
        </div>
    </div>
    <div>
        <p>{{ comment.TextFree | purify | nl2br }}</p>
        {% set relations = comment.relations | split(',') %}
        <p class="small font-italic p-0 m-0">{% for relation in relations %}{{ ('Comment_' ~ relation) | lower | trans }}{% if not loop.last %}<br>{% endif %}{% endfor %}</p>
    </div>
</div>
