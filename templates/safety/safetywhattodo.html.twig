{% extends 'base.html.twig' %}

{% block title %}
    {{ 'safety' | trans }}
{% endblock %}



{% block content %}
<h1><a href="safety">{{ 'Safety' | trans }}</a></h1>
<div class="row">
    <div class="col-12 col-md-6">
        <a name="emergency"></a>
        <h3>{{ 'safety_emergency' | trans }}</h3>
        <p>{{'safety_emergencytext'|trans 
            ({ 'safety.emergency.contact.us' : '<a href="' ~ url('safety_contact') ~ '">' ~ 'safety.emergency.contact.us'|trans ~ '</a>' })
            | purify }}
        </p>
    </div>
    <div class="col-12 col-lg-6">
        <a name="uncomfortable"></a>
        <h3>{{ 'safety_uncomfortablesituation' | trans }}</h3>
        <p>{{ 'safety_uncomfortablesituationtext' | trans | purify }}</p>
    </div>
</div>
{% endblock content %}
