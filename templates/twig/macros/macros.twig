{% macro input(name, placeholder, value, type) %}
    <input class="form-control" type="{{ type|default('text') }}" name="{{ name }}" placeholder="{{ placeholder|trans }}"
           value="{{ value|e }}" />
{% endmacro %}

{% macro submit(text) %}
    <input class="form-control" type="submit" value="{{ text|trans }}" />
{% endmacro %}

{% macro avatar(username, size) %}
    {% set suffix = '_30_30' %}
    {% if size == 30 %}
        {% set suffix = '_30_30' %}
    {% elseif size == 50  %}
        {% set suffix = '_50_50' %}
    {% elseif size == 75  %}
        {% set suffix = '_150' %}
    {% elseif size == 150  %}
        {% set suffix = '_150' %}
    {% elseif size == 150  %}
        {% set suffix = '_150' %}
    {% elseif size == 200  %}
        {% set suffix = '_200' %}
    {%  endif %}
    {{ username }}*
    {{ size }}*
    {{ suffix }}
    <img src="{{ path('avatar', { 'username': username , 'size': suffix }) }}" >
{% endmacro %}