{% extends '@base/base.html.twig' %}

{% block content %}
    <h1>{{ 'AdminQueries' | trans }}</h1>
<form>
    <div class="form-group row">
        <label for="querylist" class="col-sm-2 form-control-label">Select Query:</label>
        <div class="col-sm-10">
            <select id="language" name="language" class="select2 combo" style="width:100%">
                <option></option>
                <option value="1">First query</option>
                <option value="2">Second query</option>
                <option value="3">Third query</option>
                <option value="4">Fourth query</option>
                <option value="5">Fifth query</option>
                <option value="6">Sixth query</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="param1" class="col-sm-2 form-control-label">Old Username</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="param1" placeholder="Please enter old username">
        </div>
    </div>
    <div class="form-group row">
        <label for="param2" class="col-sm-2 form-control-label">New Username</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="param2" placeholder="Please enter new username">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">{{ 'Submit' | trans }}</button>
        </div>
    </div>
</form>
{% endblock content %}