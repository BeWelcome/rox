{% extends 'base.html.twig' %}
{% import 'macros.twig' as macros %}

{% block subnav %}
    {% for filter,menuItem in submenu.items %}
        <a class="list-group-item nav-link {% if submenu.active == filter %}active{% endif %}"
           href="{{ menuItem.url }}">{{ menuItem.key | trans({}, 'messages', 'en') }}</a>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/jquery_ui.js') }}"></script>
    <script src="{{ asset('build/admin/faqs.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/jquery_ui.css') }}" />
{% endblock stylesheets %}

{% block content %}
    <h1>{{ 'SortFaqCategories' | trans }}</h1>
    {% if faqCategories|length == 0 %}
        <p>{{ 'No categories found.' | trans }}</p>
        <p>{{ 'Please create one.' | trans }}<a class="float-right" href="{{ path('admin_faqs_category_create') }}"><button class="btn btn-primary">{{ 'CreateFaqCategory' | trans }}</button></a></p>
    {% else %}
        {{ form_start(form) }}
            {{ form_row(form.sortOrder) }}
            <div class="card mb-1">
                <div class="card-body">
                    <h5 class="card-title">FAQ</h5>
                    <p class="card-text">This shows the list of all FAQ categories. You can drag the cards to change the sort order.</p>
                    <p class="card-text text-right">
                        <button type="submit" class="btn btn-primary">{{ 'UpdateFaqOrder' }}</button>
                    </p>
                </div>
            </div>
            <div id="faqs">
            {% for faqCategory in faqCategories %}
                <div id="faq_{{ faqCategory.id }}" class="card mb-1">
                    <div class="card-body">
                        <p class="card-title"><small class="text-muted">{{ faqCategory.description }}</small></p>
                        <p class="card-text">{{ faqCategory.description | trans({}, 'messages', 'en') }}</p>
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">{{ 'UpdateFaqOrder' }}</button>
                </div>
            </div>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}