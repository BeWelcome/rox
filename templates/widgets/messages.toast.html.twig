<div class="toast" role="alert" data-toggle="toast" data-delay="700" data-autohide="false">
    <div class="toast-header">
        <strong class="mr-auto">{{ 'toast.header' | trans }}</strong>
        <small class="text-muted">{{ date('now')|localizeddate }}</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
    </div>
    <div class="toast-body">
        {% trans with {'count': (messageCount - lastMessageCount)} %}
        {0} There are no new messages|{1} There is one new message|]1,Inf[ There are %count% new messages
        {% endtrans %}
    </div>
</div>
