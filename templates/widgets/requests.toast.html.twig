<div class="toast" role="alert" data-toggle="toast" data-delay="700" data-autohide="false">
    <div class="toast-header">
        <strong class="mr-auto">{{ 'toast.header' | trans }}</strong>
        <small class="text-muted">{{ date('now')|localizeddate }}</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
    </div>
    <div class="toast-body">
        {% transchoice (requestCount - lastRequestCount) %}
        {0} There are no new requests|{1} There is one new request|]1,Inf[ There are %count% new requests
        {% endtranschoice %}
    </div>
</div>
